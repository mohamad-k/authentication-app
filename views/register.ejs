<h1 class="text-center">Register Page</h1>

<!------ Include the above in your HEAD tag ---------->


 <div class="container text-center">
     <form action="/users/register" method="POST">
 <!---heading---->
     <header class="heading"> Registration-Form</header><hr></hr>
    <!---Form starting----> 
    <% include ./partials/messages %>
	<div class="row ">
	 <!--- For Name---->
         <div class="col-sm-12">
             <div class="row">
			     <div class="col-xs-4">
          	         <label class="firstname">First Name :</label> </div>
		         
		             <input type="text" name="firstname" id="fname" placeholder="Enter your First Name" class="form-control ">
             
		      </div>
		 </div>
		 
		 
         <div class="col-sm-12">
		     <div class="row">
			     <div class="col-xs-4">
                     <label class="lastname">Last Name :</label></div>
				 
		             <input type="text" name="lastname" id="lname" placeholder="Enter your Last Name" class="form-control last">
                
		     </div>
		 </div>
     <!-----For email---->
		 <div class="col-sm-12">
		     <div class="row">
			     <div class="col-xs-4">
		             <label class="mail" >Email :</label></div>
			      
			          <input type="email" name="email"  id="email"placeholder="Enter your email" class="form-control" >
		         
		     </div>
		 </div>
     <!-----For Password and confirm password---->
     
          <div class="col-sm-12">
		         <div class="row">
				     <div class="col-xs-4">
		 	              <label class="pass">Password :</label></div>
				  
			             <input type="password" name="password" id="password" placeholder="Enter your Password" class="form-control">
				 
          </div>
          </div>
          <div class="col-sm-12">
                <div class="row">
                    <div class="col-xs-4">
                          <label class="pass">confirm Password :</label></div>
                 
                        <input type="password" name="password2" id="password" placeholder="Enter your Password" class="form-control">
                
         </div>
         </div>
     
     <!-----------For Phone number-------->
         <div class="col-sm-12">
		     <div class ="row">
                 <div class="col-xs-4 ">
			       <label class="gender">Gender:</label>
				 </div>
			 
			     <div class="col-md-4 male">	 
				     <input type="radio" name="gender"  id="gender" value="boy">Male</input>
				 </div>
				 
				 <div class="col-md-4 female">
				     <input type="radio"  name="gender" id="gender" value="girl" >Female</input>
			     </div>
			
		  	 </div>
		     <div class="col-sm-12">
		         <button class="btn btn-warning" type="submit">Submit</button>
		   </div>
		 </div>
	 </div>	 
    </form>		 
		 
</div>


	 
	 